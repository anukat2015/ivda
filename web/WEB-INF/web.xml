<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <servlet>
        <servlet-name>REST service</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>sk.stuba.fiit.perconik.ivda.server.servlets.RestServlet</param-value>
        </init-param>
        <init-param>
            <param-name>unit:WidgetPU</param-name>
            <param-value>persistence/widget</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>REST service</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Timeline servlet</servlet-name>
        <servlet-class>sk.stuba.fiit.perconik.ivda.server.servlets.TimelineServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Timeline servlet</servlet-name>
        <url-pattern>/datatable</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Processes servlet</servlet-name>
        <servlet-class>sk.stuba.fiit.perconik.ivda.server.servlets.ProcessesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Processes servlet</servlet-name>
        <url-pattern>/processes</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>sk.stuba.fiit.perconik.ivda.server.servlets.AppInitializer</listener-class>
    </listener>
</web-app>
